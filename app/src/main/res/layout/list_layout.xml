<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView

        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="300dp"
        android:layout_toEndOf="@+id/mart_image"
        android:id="@+id/item_image"
        app:srcCompat="@mipmap/pringles_bbq" />

    <ImageView

        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:id="@+id/mart_image"
        android:rotation="-90"
        android:scaleX="2"
        android:scaleY="2"
        app:srcCompat="@mipmap/tesco" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="15dp"
        android:text="Pringles Barbeque Flavour Crisps"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="65dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="RM 5.30"
        android:textColor="#E34A4A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/weight_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="100dp"
        android:layout_toEndOf="@+id/price_text"
        android:fontFamily="sans-serif-medium"
        android:text="200g"
        android:textColor="#A19C9C"
        android:textSize="18sp" />
</RelativeLayout>